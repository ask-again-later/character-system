.data-entry-index
  .breadcrumbs
    = render_breadcrumbs

  h2 Rituals

  .button-row.right
    = link_to "New Ritual", new_storytellers_ritual_path, class: 'button'

  table.table
    thead
      th Name
      th Principle
      th
      th
    tbody
      - if @rituals
        - @rituals.each do |ritual|
          tr
            td
              = link_to ritual.name, storytellers_ritual_path(ritual)
            td #{ritual.principle}
            td
              = link_to "Edit", edit_storytellers_ritual_path(ritual)
            td
              = form_for(storytellers_ritual_path(ritual), method: 'DELETE')
                = button_tag "Delete", type: 'submit', class: 'button-text', onClick: 'confirm("Are you sure you want to delete this ritual?")'
